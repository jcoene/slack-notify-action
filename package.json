{
  "name": "slack-notify-action",
  "version": "2.0.0",
  "description": "GitHub Action to send a job status notification to Slack",
  "main": "index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "test": "prettier -l 'src/**/*.ts'"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "babel-ts"
  },
  "author": "Jason Coene",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "@slack/webhook": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.28.3",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  }
}
